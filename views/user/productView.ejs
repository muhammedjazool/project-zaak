        <script>
            async function addToCart() {
                event.preventDefault();
                const quantity = document.getElementById("quantity").value;
                const productId = document.getElementById("productId").value;
                const size = document.getElementById("size").value;
                const data = { size, quantity, productId };
            
                try {
                    const response = await axios.post("/addToCart", data, {
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });
            
                    if (response.status === 200) {
                        
                        if (response.data.message === "item already in cart") {
                            
                            Swal.fire({
                                icon: 'success',
                                title: 'Item is already in the cart',
                                showConfirmButton: true,
                                timer: 1500
                            });
                        } else if (response.data.message === "item added to cart") {
                           
                            Swal.fire({
                                icon: 'success',
                                title: 'Item added to cart successfully',
                                showConfirmButton: true,
                                timer: 1500
                            });
                            
                        } else if (response.data.message === "Out of stock") {
                           
                            Swal.fire({
                                icon: 'error',
                                title: 'Out of stock',
                                text: 'The selected quantity is not available.',
                                confirmButtonText: 'OK'
                            });
                        }
                    }
                } catch (error) {
                   
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'There was an error processing your request. Please try again later.',
                        confirmButtonText: 'OK'
                    });
                    console.error(error);
                }
            }
            </script>
            

        
