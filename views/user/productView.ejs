            <script>



                async function addToCart() {


                    event.preventDefault();
                    const quantity = document.getElementById("quantity").value;
                    const productId = document.getElementById("productId").value;
                    const size = document.getElementById("size").value;

                    const data = { size, quantity, productId };

                    resetError();

                    try {
                        const response = await axios.post("/addToCart", data, {
                            headers: {
                                'Content-Type': 'application/json'
                            }
                        });
                        console.log(316, "axiosprductview", response)
                        if (response.data) {
                            if (response.data.message === "item already in cart") {

                                Swal.fire({
                                    icon: 'success',
                                    title: 'Item is already in the cart',
                                    showConfirmButton: true,
                                    timer: 1000
                                });
                            } else if (response.data.message === "Item quantity updated in cart") {

                                Swal.fire({
                                    icon: 'success',
                                    title: 'Item qunatity added to cart successfully',
                                    showConfirmButton: true,
                                    timer: 1000
                                });
                            } else if (response.data.message === "Item added to cart") {

                                Swal.fire({
                                    icon: 'success',
                                    title: 'Item added to cart successfully',
                                    showConfirmButton: true,
                                    timer: 1000
                                });
                            } else if (response.data.message === "Quantity exceeds available stock") {

                                Swal.fire({
                                    icon: 'warning',
                                    title: 'Out of stock',
                                    text: 'The selected quantity is more than the available stock.',
                                    confirmButtonText: 'OK'
                                });
                            }
                        }
                    } catch (error) {
                        if (error.response && error.response.status === 400) {

                            const err = error.response.data.error;
                            const sizeError = document.getElementById("sizeError");
                            sizeError.textContent = err;
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Out of Stock',
                                text: 'The selected quantity is not available',
                                confirmButtonText: 'OK'
                            });
                            console.error(error);
                        }
                    }
                }
                function resetError() {
                    const errorElement = document.getElementById("sizeError");
                    errorElement.textContent = "";
                }
            </script>



