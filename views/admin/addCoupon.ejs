          <style>
               form {
                    display: flex;
                    flex-direction: column;
                    margin-top: 30px;
                    margin: 0 auto;
                    /* Center the form horizontally */
                    max-width: 400px;
               }

               input[type="text"],
               input[type="number"],
               input[type="date"] {
                    margin-bottom: 20px;
                    padding: 10px;
                    border: none;
                    border-radius: 5px;
                    box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.3);
                    width: 100%;
                    background-color: #374151;
               }

               button {
                    background-color: #4CAF50;
                    color: white;
                    padding: 10px 20px;
                    border: none;
                    border-radius: 5px;
                    cursor: pointer;
                    font-size: 18px;
                    font-weight: bold;
                    box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.3);
                    width: 100%;
                    margin-bottom: 2rem;
               }

               button:hover {
                    background-color: #3e8e41;
               }

               .container {
                    border-radius: 20px;
                    border: 1px solid black;
                    background-color: #1f2937;
                    color: white;
                    width: 55%;
                    margin: 0 auto;
                    /* Center the container horizontally */
                    margin-bottom: 2rem;
                    padding: 2rem;
               }
          </style>

          <input type="search" style="display: none;" placeholder="Search Categories" aria-label="Search" />

          <div class="container mt-5" id="addCategory">
               <h1 style="text-align: center; padding-bottom: 10px;">Add New Coupon</h1>

               <form id="addCoupon">
                    <div class="row">
                         <div class="col-lg-6">
                              <input type="text" placeholder="Enter Coupon Code" id="couponCode" name="couponCode">
                         </div>
                         <div class="col-lg-6">
                              <input type="number" placeholder="Discount %" id="couponDiscount" name="couponDiscount">
                         </div>
                    </div>

                    <div class="row">
                         <div class="col-lg-6">
                              <input type="number" placeholder="Enter minimum discount amount" id="minDiscount"
                                   name="minDiscount">
                         </div>
                         <div class="col-lg-6">
                              <input type="number" placeholder="Enter maximum discount amount" id="maxDiscount"
                                   name="maxDiscount">
                         </div>
                    </div>

                    <div class="row">
                         <div class="col-lg-6">
                              <input type="date" placeholder="Expiry Date" id="couponDate" name="couponDate" required>
                         </div>
                    </div>

                    <button type="submit">ADD COUPON</button>
               </form>
          </div>



